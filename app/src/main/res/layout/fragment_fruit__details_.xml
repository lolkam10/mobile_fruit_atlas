<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        android:backgroundTint="@color/cardBackground"
        app:cardElevation="6dp"
        android:elevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_details_name"
                android:textSize="30sp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="@color/secondary_text"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textView2"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/id" />

                    <TextView
                        android:id="@+id/textView3"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/family" />

                    <TextView
                        android:id="@+id/textView4"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/genus" />

                    <TextView
                        android:id="@+id/textView5"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order" />

                    <TextView
                        android:id="@+id/textView6"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/carbohydrates" />

                    <TextView
                        android:id="@+id/textView7"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/protein" />

                    <TextView
                        android:id="@+id/textView8"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fat" />

                    <TextView
                        android:id="@+id/textView9"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/calories" />

                    <TextView
                        android:id="@+id/textView10"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/sugar" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_details_id"
                        android:textSize="20sp"
                        android:textColor="@color/secondary_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragment_details_family"
                        android:textSize="20sp"
                        android:textColor="@color/secondary_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragment_details_genus"
                        android:textSize="20sp"
                        android:textColor="@color/secondary_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragment_details_order"
                        android:textSize="20sp"
                        android:textColor="@color/secondary_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragment_details_carbo"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:textColor="@color/secondary_text"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragment_details_protein"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:textColor="@color/secondary_text"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragment_details_fat"
                        android:textSize="20sp"
                        android:textColor="@color/secondary_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragment_details_calories"
                        android:textSize="20sp"
                        android:textColor="@color/secondary_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/fragment_details_sugar"
                        android:textSize="20sp"
                        android:textColor="@color/secondary_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/fragment_details_link"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_marginHorizontal="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />



</LinearLayout>